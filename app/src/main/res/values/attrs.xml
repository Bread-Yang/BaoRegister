<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WheelView">

        <!-- the color of the wheelview backgroup -->
        <attr name="wheelBackground" format="reference" />
        <attr name="wheelForeground" format="reference" />
        <attr name="hasLeftBorder" format="boolean" />
        <attr name="hasTopBorder" format="boolean" />
        <attr name="hasRightBorder" format="boolean" />
        <attr name="hasBottomBorder" format="boolean" />
        <attr name="enabled" format="boolean" />
        <attr name="textNormalColor" format="reference" />
        <attr name="textHighlightColor" format="reference" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="highlightTextSize" format="dimension" />
        <attr name="wheelCenterLabel" format="string|reference" />
        <attr name="centerLabelPosition" format="integer|dimension" />
        <attr name="TextHeight" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="selectedBackgroundColors" format="color|reference" />
        <attr name="selectedTextColors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
        <attr name="selectedIndex" format="integer" />
    </declare-styleable>

    <attr name="fontPath" format="string" />

</resources>